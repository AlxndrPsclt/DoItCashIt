<% provide(:title, 'Nouveau défi') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="../bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="../bootstrap/css/bootstrap-responsive.css" rel="stylesheet">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
  </head>


  <body>
  	<div class="container-fluid">
      <div class="hero-unit"style="text-align:center;">
	      <div class="row-fluid">
	          <% if signed_in? %>
	          <%= link_to "Déconnection", signout_path, method: "delete", class: "pull-right" %>
	          <% else %>
	          <a href="/signin" class="btn btn-large btn-primary pull-right"style="margin-right:10px;">Connection</a>
	          <a href="/signup" class="btn btn-large btn-primary pull-right"style="margin-right:10px;">Inscris toi!</a>
	          <% end %>
		  </div>
  		  <h1>CRÉATION D'UN DÉFI</h1>
      </div>
    <% if signed_in? %>
        <h1><%= gravatar_for @current_user %> <%= @current_user.name %></h1>
   	<% end %>

      <div class="navbar navbar-inverse ">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/home">Do It Cash It</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="/home">Acceuil</a></li>
              <li><a href="/defisrealises">Défis réalisés</a></li>
              <li><a href="/defisarealiser">Défis à réaliser</a></li>
              <% if signed_in? %>
              <li><a href="/users/<%=@current_user.id%>">Mon Compte</a></li>
              <% end %>
              <li><a href="/users">La communauté</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <div class="row">
            <div class="span8 offset2"style="color:white;">
              <%= form_for(@defi) do |f| %>

                <%= render 'shared/error_defis_messages' %>
                <%= f.label :titre, "Titre" %>
                <%= f.text_field :titre, :class => 'description_field'%>

                <%= f.label :description%>
                <div class="field">
    				<%= f.text_area :description, placeholder: "décrit l'objectif du défi...", :class => 'description_field' %>
  				</div>

                <%= f.label :modalites, "Modalités de validation" %>
                <%= f.text_field :modalites, :class => 'description_field' %>
   
               	<%= f.label :dateLancement, "Date de lancement" %>
				        <%= f.datetime_select :dateLancement, { :order => [:day, :month, :year, :hour,:minute], :start_year=> Time.now.year }, :size => 0 %>

                <%= f.label :dateLimite, "Date limite du défi" %>
                <small>(si elle est dépassée le défi peut être relever mais les crédits pourront être rendus)</small>
                <br>
                <%= f.datetime_select :dateLimite, { :order => [:day, :month, :year, :hour,:minute], :start_year=> Time.now.year }, :size => 0 %>

                <%= f.label :miseDeDepart, "Mise de départ" %>
                <%= f.number_field :miseDeDepart %>
                <br>
               

                <%= f.submit "Créer le défi", class: "btn btn-large btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>



    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="../bootstrap/js/jquery.js"></script>
    <script src="../bootstrap/js/bootstrap-transition.js"></script>
    <script src="../bootstrap/js/bootstrap-alert.js"></script>
    <script src="../bootstrap/js/bootstrap-modal.js"></script>
    <script src="../bootstrap/js/bootstrap-dropdown.js"></script>
    <script src="../bootstrap/js/bootstrap-scrollspy.js"></script>
    <script src="../bootstrap/js/bootstrap-tab.js"></script>
    <script src="../bootstrap/js/bootstrap-tooltip.js"></script>
    <script src="../bootstrap/js/bootstrap-popover.js"></script>
    <script src="../bootstrap/js/bootstrap-button.js"></script>
    <script src="../bootstrap/js/bootstrap-collapse.js"></script>
    <script src="../bootstrap/js/bootstrap-carousel.js"></script>
    <script src="../bootstrap/js/bootstrap-typeahead.js"></script>
    
      </body>
</html>


